<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:layout_marginHorizontal="8dp"
        android:background="@drawable/gradient_card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".ui.itemreview.NewItemReviewActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@drawable/gradient_card">

            <TextView
                android:id="@+id/labelTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_label"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="@+id/labelTitle"
                app:layout_constraintStart_toEndOf="@+id/labelTitle"
                app:layout_constraintTop_toTopOf="@+id/labelTitle"
                tools:text="Titulo da Avaliação" />

            <TextView
                android:id="@+id/labelOwner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/owner_label"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/labelTitle" />

            <TextView
                android:id="@+id/owner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="@+id/labelOwner"
                app:layout_constraintStart_toEndOf="@+id/labelOwner"
                app:layout_constraintTop_toTopOf="@+id/labelOwner"
                tools:text="Nome do Lugar" />

            <TextView
                android:id="@+id/labelReview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/review_label"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/labelOwner" />

            <TextView
                android:id="@+id/review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="@+id/labelReview"
                app:layout_constraintStart_toEndOf="@+id/labelReview"
                app:layout_constraintTop_toTopOf="@+id/labelReview"
                tools:text="Descrição da Avaliação" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/baseline_arrow_forward_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/white"
                tools:ignore="ContentDescription" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <ImageView
        android:id="@+id/star_disabled_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-11dp"
        android:layout_marginEnd="2dp"
        android:src="@drawable/baseline_star_24"
        app:layout_constraintEnd_toEndOf="@+id/materialCardView"
        app:layout_constraintEnd_toStartOf="@+id/star_disabled_2"
        app:layout_constraintTop_toTopOf="@+id/materialCardView"
        app:tint="@color/rating_disabled"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/star_disabled_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-11dp"
        android:layout_marginEnd="2dp"
        android:src="@drawable/baseline_star_24"
        app:layout_constraintEnd_toEndOf="@+id/materialCardView"
        app:layout_constraintEnd_toStartOf="@+id/star_disabled_3"
        app:layout_constraintTop_toTopOf="@+id/materialCardView"
        app:tint="@color/rating_disabled"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/star_disabled_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-11dp"
        android:layout_marginEnd="2dp"
        android:src="@drawable/baseline_star_24"
        app:layout_constraintEnd_toEndOf="@+id/materialCardView"
        app:layout_constraintEnd_toStartOf="@+id/star_disabled_4"
        app:layout_constraintTop_toTopOf="@+id/materialCardView"
        app:tint="@color/rating_disabled"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/star_disabled_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-11dp"
        android:layout_marginEnd="2dp"
        android:src="@drawable/baseline_star_24"
        app:layout_constraintEnd_toEndOf="@+id/materialCardView"
        app:layout_constraintEnd_toStartOf="@+id/star_disabled_5"
        app:layout_constraintTop_toTopOf="@+id/materialCardView"
        app:tint="@color/rating_disabled"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/star_disabled_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="9dp"
        android:layout_marginTop="-11dp"
        android:src="@drawable/baseline_star_24"
        app:layout_constraintEnd_toEndOf="@+id/materialCardView"
        app:layout_constraintTop_toTopOf="@+id/materialCardView"
        app:tint="@color/rating_disabled"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/star_enabled_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-12dp"
        android:layout_marginEnd="2dp"
        android:src="@drawable/baseline_star_24"
        app:layout_constraintEnd_toEndOf="@+id/materialCardView"
        app:layout_constraintEnd_toStartOf="@+id/star_enabled_2"
        app:layout_constraintTop_toTopOf="@+id/materialCardView"
        app:tint="@color/rating_enabled"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/star_enabled_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-12dp"
        android:layout_marginEnd="2dp"
        android:src="@drawable/baseline_star_24"
        app:layout_constraintEnd_toEndOf="@+id/materialCardView"
        app:layout_constraintEnd_toStartOf="@+id/star_enabled_3"
        app:layout_constraintTop_toTopOf="@+id/materialCardView"
        app:tint="@color/rating_enabled"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/star_enabled_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-12dp"
        android:layout_marginEnd="2dp"
        android:src="@drawable/baseline_star_24"
        app:layout_constraintEnd_toEndOf="@+id/materialCardView"
        app:layout_constraintEnd_toStartOf="@+id/star_enabled_4"
        app:layout_constraintTop_toTopOf="@+id/materialCardView"
        app:tint="@color/rating_enabled"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/star_enabled_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-12dp"
        android:layout_marginEnd="2dp"
        android:src="@drawable/baseline_star_24"
        app:layout_constraintEnd_toEndOf="@+id/materialCardView"
        app:layout_constraintEnd_toStartOf="@+id/star_enabled_5"
        app:layout_constraintTop_toTopOf="@+id/materialCardView"
        app:tint="@color/rating_enabled"
        tools:ignore="ContentDescription"
        tools:visibility="invisible" />

    <ImageView
        android:id="@+id/star_enabled_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="-12dp"
        android:src="@drawable/baseline_star_24"
        app:layout_constraintEnd_toEndOf="@+id/materialCardView"
        app:layout_constraintTop_toTopOf="@+id/materialCardView"
        app:tint="@color/rating_enabled"
        tools:ignore="ContentDescription"
        tools:visibility="invisible" />

</androidx.constraintlayout.widget.ConstraintLayout>